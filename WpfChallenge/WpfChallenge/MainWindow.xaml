<Window x:Class="WpfChallenge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfChallenge"
        mc:Ignorable="d"
        Title="MainWindow"  WindowState="Maximized" Height="800" Width="1200
        ">
    <Grid Width="1194" Margin="0,34,-0.4,-83.6" HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblCliNome" Content="Nome Completo:" HorizontalAlignment="Left" Margin="234,62,0,0" FontFamily="Tahoma" FontWeight="Bold" VerticalAlignment="Top"/>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="234,126,0,0" VerticalAlignment="Top" FontFamily="Tahoma" FontWeight="Bold"/>
        <Label Content="Telefone:&#xD;&#xA;" HorizontalAlignment="Left" Margin="234,197,0,0" FontFamily="Tahoma" FontWeight="Bold" VerticalAlignment="Top"/>
        <Label Content="Endereço:&#xA;" HorizontalAlignment="Left" Margin="234,267,0,0" FontFamily="Tahoma" FontWeight="Bold" VerticalAlignment="Top" Width="110"/>
        <TextBox x:Name="txtNome" HorizontalAlignment="Left" Margin="234,91,0,0" TextWrapping="Wrap" Width="725" Height="35
                 " VerticalAlignment="Top" Grid.ColumnSpan="2" FontFamily="Arial" Padding="10,10,0,0" RenderTransformOrigin="0.783,0.526"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="234,157,0,0" TextWrapping="Wrap" Width="725" Height="35" VerticalAlignment="Top" Grid.ColumnSpan="2" FontFamily="Arial" Padding="10,10,0,0" RenderTransformOrigin="0.503,0.574"/>
        <TextBox x:Name="txtTelefone" HorizontalAlignment="Left" Margin="234,227,0,0" TextWrapping="Wrap" Width="725" Height="35" VerticalAlignment="Top" Grid.ColumnSpan="2" FontFamily="Arial" Padding="10,10,0,0"/>
        <TextBox x:Name="txtEndereco" HorizontalAlignment="Left" Margin="234,292,0,0" TextWrapping="Wrap" Width="725" Height="35" VerticalAlignment="Top" FontFamily="Arial" Padding="10,10,0,0" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="24,23,0,0" TextWrapping="Wrap" Text="Clientes" VerticalAlignment="Top" Height="42" Width="255" FontFamily="Arial Black" FontWeight="Bold" FontSize="20"/>
        <Button x:Name="btnSalvar"  Content="Salvar" HorizontalAlignment="Center" Margin="549,367,547.6,0" VerticalAlignment="Top" Width="97" Height="35" Click="btnSalvarClick" RenderTransformOrigin="0.457,0.981" FontSize="14" FontWeight="Bold" FontFamily="Arial Black" Grid.ColumnSpan="2"/>
        <Button x:Name="btnEditar" Tag="{Binding Id}" Content="Editar" Visibility="Hidden" HorizontalAlignment="Center" Margin="549,367,547.6,0" VerticalAlignment="Top" Width="97" Height="35" Click="btnEditarClick" RenderTransformOrigin="0.457,0.981" FontSize="14" FontWeight="Bold" FontFamily="Arial Black" Grid.ColumnSpan="2"/>

        <DataGrid Name="dataGrid" CanUserAddRows="false" AutoGenerateColumns="False" VerticalAlignment="Stretch" Height="Auto"  FontFamily="Trebuchet MS"  FontSize="14" Grid.ColumnSpan="2" Margin="145,447,145,111">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" IsReadOnly="True" Width="300" />
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" IsReadOnly="True" Width="200" />
                <DataGridTextColumn Header="Telefone" Binding="{Binding Telefone}" IsReadOnly="True" Width="Auto" />
                <DataGridTextColumn Header="Endereço" Binding="{Binding Endereco}" IsReadOnly="True" Width="200" />
                
                <DataGridTemplateColumn Header="Ações"  Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate >
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <Button x:Name="btnEditarGrid" Tag="{Binding Id}" Content="Editar" Margin="2" Click="btnEditarGrid_Click" />
                                <Button x:Name="btnExcluir" Tag="{Binding Id}" Content="Excluir" Margin="2" Click="btnExcluir_Click" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <DockPanel Background="GhostWhite">
                        <Image DockPanel.Dock="Left" Source="{Binding ImagemUrl}" Height="64" Margin="10" />
                        <Grid Margin="0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="ID: " FontWeight="Bold" />
                            <TextBlock Text="{Binding Nome}" Grid.Column="1" />
                            <TextBlock Text="Nome: " FontWeight="Bold" Grid.Row="1" />
                            <TextBlock Text="{Binding Email}" Grid.Column="1" Grid.Row="1" />
                            <TextBlock Text="Email: " FontWeight="Bold" Grid.Row="2" />
                            <TextBlock Text="{Binding Telefone, StringFormat=d}" Grid.Column="1" Grid.Row="2" />
                        </Grid>
                    </DockPanel>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>

        </DataGrid>
    </Grid>
</Window>
