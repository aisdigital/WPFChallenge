<Window x:Class="WpfChallenge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfChallenge"
        mc:Ignorable="d"
        Title="MainWindow" Height="308.245" Width="800">
    <Grid>
        <Button Content="Limpa e habilita campos" x:Name="Limpa_Campos" HorizontalAlignment="Left" VerticalAlignment="Top" Width="252" Margin="93,39,0,0" Click="Limpa_Campos_Click"/>
        <Label Content="Identificador" x:Name="lblIdentificador" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="1.018,3.486" Margin="10,63,0,0" Height="26" Width="77"/>
        <Label Content="Name" x:Name="lblName" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="1.018,3.486" Margin="10,92,0,0" Height="26" Width="42"/>
        <Label Content="Email" x:Name="lblEmail" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="1.018,3.486" Margin="10,120,0,0" Height="26" Width="38"/>
        <Label Content="Phone" x:Name="lblPhone" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="1.018,3.486" Margin="10,146,0,0" Height="26" Width="44"/>
        <Label Content="Address" x:Name="lblAddress" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="1.018,3.486" Margin="10,172,0,0" Height="26" Width="53"/>
        <TextBox x:Name="txtIdentificador" HorizontalAlignment="Left" Height="23" Margin="93,72,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" Margin="93,101,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="23" Margin="93,129,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="txtPhone" HorizontalAlignment="Left" Height="23" Margin="93,155,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="txtAddress" HorizontalAlignment="Left" Height="23" Margin="12,198,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="231"/>
        <Button Content="SearchId" x:Name ="btnPesquisaPorId" HorizontalAlignment="Left" VerticalAlignment="Top" Width="94" Margin="251,74,0,0" Click="btnPesquisaPorId_Click" Height="20"/>
        <Button Content="Selecione o registro e click para editar" x:Name="Editar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="230" Margin="549,72,0,0" Click="Editar_Click" Height="20"/>
        <Button Content="Add" x:Name="Add" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="270,172,0,0" Click="Add_Click" Height="20"/>
        <Button Content="Update" x:Name="Update" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="270,206,0,0" Click="Update_Click" Height="20"/>
        <Button Content="Selecione o registro para Deletar" x:Name="Delete" HorizontalAlignment="Left" VerticalAlignment="Top" Width="187" Margin="158,240,0,0" Height="20" Click="Delete_Click"/>
        <CheckBox Content="Add" x:Name="chkAdd" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="270,152,0,0" Click="chkAdd_Click"/>
        <DataGrid x:Name="dtGrid" ItemsSource="{Binding}" Margin="350,101,10,17" 
            AutoGenerateColumns="False"
            SelectionUnit="FullRow"
            SelectionMode="Extended"
            CanUserReorderColumns="True"
            CanUserResizeRows="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="IdCliente" Binding="{Binding IdCliente}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name, Mode=TwoWay}"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email, Mode=TwoWay}"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding Phone, Mode=TwoWay}"/>
                <DataGridTextColumn Header="Adress" Binding="{Binding Address, Mode=TwoWay}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
