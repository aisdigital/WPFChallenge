        <TextBox x:Name="txtBairro" HorizontalAlignment="Left" Margin="29,360,0,0" TextWrapping="Wrap" Width="209" Height="35" VerticalAlignment="Top" FontFamily="Arial" Padding="10,10,0,0"/>
