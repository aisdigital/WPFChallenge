<Window x:Class="WpfChallenge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfChallenge" xmlns:local1="clr-namespace:WpfChallenge.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow"  WindowState="Maximized" Height="600" Width="1200
        ">
    <Window.DataContext>
        <local1:ClienteViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Validation.ErrorTemplate">
                <Setter.Value>
                    <ControlTemplate>
                        <StackPanel>
                            <Border BorderThickness="2" BorderBrush="DarkRed">
                                <StackPanel>
                                    <AdornedElementPlaceholder    
                                x:Name="errorControl" />
                                </StackPanel>
                            </Border>
                            <TextBlock Text="{Binding AdornedElement.ToolTip    
                        , ElementName=errorControl}" Foreground="Red" />
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="BorderBrush" Value="Red" />
                    <Setter Property="BorderThickness" Value="1" />
                    <Setter Property="ToolTip"    
                Value="{Binding RelativeSource={RelativeSource Self}    
                    , Path=(Validation.Errors)[0].ErrorContent}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Width="1194" Margin="0,34,-0.4,-19.6" HorizontalAlignment="Left">
        <Grid.RowDefinitions>
            <RowDefinition Height="211*"/>
            <RowDefinition Height="67*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="281*"/>
            <ColumnDefinition Width="567*"/>
        </Grid.ColumnDefinitions>

        <DataGrid Name="gridClientes" Height="433" Margin="278.8,23,141.6,0" VerticalAlignment="Top" Grid.Column="1" AutoGenerateColumns="False" Grid.RowSpan="2"/>


        <Label x:Name="lblCliNome"   Content="Nome Completo:" HorizontalAlignment="Left" Margin="24,59,0,0" FontFamily="Tahoma" FontWeight="Bold" VerticalAlignment="Top" Height="24" Width="110"/>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="318,64,0,0" VerticalAlignment="Top" FontFamily="Tahoma" FontWeight="Bold" Height="24" Width="48"/>
        <Label Content="Telefone" HorizontalAlignment="Left" Margin="19,148,0,0" FontFamily="Tahoma" FontWeight="Bold" VerticalAlignment="Top" Height="24" Width="62"/>
        <Label Content="CEP:" HorizontalAlignment="Left" Margin="19,235,0,0" FontFamily="Tahoma" FontWeight="Bold" VerticalAlignment="Top" Width="110" Height="24"/>
        <TextBox x:Name="txtNome" Text="{Binding Nome, UpdateSourceTrigger=PropertyChanged,NotifyOnValidationError=True,ValidatesOnDataErrors=True}"
                      HorizontalAlignment="Left" Margin="24,93,0,0" TextWrapping="Wrap" Width="284" Height="35
                 " VerticalAlignment="Top" FontFamily="Arial" Padding="10,10,0,0"/>
        <TextBox x:Name="txtEmail" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged,NotifyOnValidationError=True,ValidatesOnDataErrors=True}"
                      HorizontalAlignment="Left" Margin="318,93,0,0" TextWrapping="Wrap" Width="323" Height="35" VerticalAlignment="Top" FontFamily="Arial" Padding="10,10,0,0" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtTelefone" Text="{Binding Telefone, UpdateSourceTrigger=PropertyChanged,NotifyOnValidationError=True,ValidatesOnDataErrors=True}"
                      HorizontalAlignment="Left" Margin="25,177,0,0" TextWrapping="Wrap" Width="616" Height="35" VerticalAlignment="Top" Grid.ColumnSpan="2" FontFamily="Arial" Padding="10,10,0,0"/>
        <TextBox x:Name="txtCEP" Text="{Binding CEP, UpdateSourceTrigger=PropertyChanged,NotifyOnValidationError=True,ValidatesOnDataErrors=True}"
                      HorizontalAlignment="Left" Margin="24,265,0,0" TextWrapping="Wrap" Width="209" Height="35" VerticalAlignment="Top" FontFamily="Arial" Padding="10,10,0,0"/>
        <TextBlock HorizontalAlignment="Left" Margin="24,23,0,0" TextWrapping="Wrap" Text="Cadastrar Cliente" VerticalAlignment="Top" Height="42" Width="255" FontFamily="Arial Black" FontWeight="Bold" FontSize="20"/>
        <Label Content="UF" HorizontalAlignment="Left" Margin="237,240,0,0" FontFamily="Tahoma" FontWeight="Bold" VerticalAlignment="Top" Width="110" Height="24"/>
        <ComboBox Name="lstUF"   Text="{Binding UF, UpdateSourceTrigger=PropertyChanged,NotifyOnValidationError=True,ValidatesOnDataErrors=True}"
                      HorizontalAlignment="Left" Margin="245,264,0,0" VerticalAlignment="Top" Width="63" Height="35" RenderTransformOrigin="0.974,0.545" FontFamily="Arial" Padding="10,10,5,3" />
        <TextBox HorizontalAlignment="Left" Text="{Binding Logradouro, UpdateSourceTrigger=PropertyChanged,NotifyOnValidationError=True,ValidatesOnDataErrors=True}"
                      Margin="243,350,0,0" TextWrapping="Wrap" Width="398" Height="35" VerticalAlignment="Top" Grid.ColumnSpan="2" FontFamily="Arial" Padding="10,10,0,0"/>
        <Label Content="Logradouro:" HorizontalAlignment="Left" Margin="238,328,0,0" FontFamily="Tahoma" FontWeight="Bold" VerticalAlignment="Top" Width="120" Height="24"/>
        <TextBox x:Name="txtCidade" Text="{Binding Cidade, UpdateSourceTrigger=PropertyChanged,NotifyOnValidationError=True,ValidatesOnDataErrors=True}"
                      HorizontalAlignment="Left" Margin="318,264,0,0" TextWrapping="Wrap" Width="323" Height="35" VerticalAlignment="Top" Grid.ColumnSpan="2" FontFamily="Arial" Padding="10,10,0,0" RenderTransformOrigin="0.546,0.514"/>
        <TextBox x:Name="txtBairro" Text="{Binding Bairro, UpdateSourceTrigger=PropertyChanged,NotifyOnValidationError=True,ValidatesOnDataErrors=True}"
                      HorizontalAlignment="Left" Margin="25,350,0,0" TextWrapping="Wrap" Width="209" Height="35" VerticalAlignment="Top" FontFamily="Arial" Padding="10,10,0,0"/>
        <Label Content="Cidade:" HorizontalAlignment="Left" Margin="309,240,0,0" FontFamily="Tahoma" FontWeight="Bold" VerticalAlignment="Top" Width="98" Grid.ColumnSpan="2" Height="24"/>
        <Label Content="Bairro" HorizontalAlignment="Left" Margin="22,326,0,0" FontFamily="Tahoma" FontWeight="Bold" VerticalAlignment="Top" Width="110" Height="24"/>
        <TextBox HorizontalAlignment="Left" Margin="25,23.6,0,0" TextWrapping="Wrap" Width="56" Height="35" VerticalAlignment="Top" Padding="10,10,0,0" Grid.Row="1"/>
        <Label Content="Número" HorizontalAlignment="Left" Margin="22,4.6,0,0" FontFamily="Tahoma" FontWeight="Bold" VerticalAlignment="Top" Width="110" Height="30" Grid.Row="1"/>
        <TextBox HorizontalAlignment="Left" Margin="103,23.6,0,0" TextWrapping="Wrap" Width="356" Height="35" VerticalAlignment="Top" Grid.ColumnSpan="2" Padding="10,10,0,0" Grid.Row="1"/>
        <Label Content="Complemento" HorizontalAlignment="Left" Margin="100,6.6,0,0" FontFamily="Tahoma" FontWeight="Bold" VerticalAlignment="Top" Width="110" Height="30" Grid.Row="1"/>
        <Button x:Name="btnSalvar" Content="Salvar" Grid.Column="1" HorizontalAlignment="Left" Margin="170.8,63.6,0,0" VerticalAlignment="Top" Width="75" Height="35" Click="btnSalvarClick" Command="{Binding Cadastrar}" CommandParameter="{Binding}" RenderTransformOrigin="0.457,0.981" FontSize="14" FontWeight="Bold" FontFamily="Arial Black" Background="#FF3A9F34" Grid.Row="1"/>


    </Grid>
</Window>
